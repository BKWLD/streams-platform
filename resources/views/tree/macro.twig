{% macro tree(items) %}
    {% for item in items %}
        <li>
            <div class="panel">

                {{ icon('bars', 'handle btn btn-xs') }}

                {{ item.value }}

                <div class="buttons">
                    {{ buttons(item.buttons) }}
                </div>

            </div>

            <ul>
                {{ macro.tree(items.children(item)) }}
            </ul>
        </li>
    {% endfor %}
{% endmacro %}
