{% for button in buttons %}
    <div class="btn-group">

        {# Render normal buttons. #}
        {% if button.dropdown is empty %}

            {# Render normal buttons as an anchor #}
            {% if not button.attributes.name %}
                <a class="btn btn-{{ button.size }} btn-{{ button.type }}" {{ html_attributes(button.attributes) }}>
                    {{ button.icon ? icon(button.icon) }}
                    {{ trans(button.text) }}
                </a>
            {% endif %}

            {# Render normal buttons as a button #}
            {% if button.attributes.name %}
                <button class="btn btn-{{ button.size }} btn-{{ button.type }}" {{ html_attributes(button.attributes) }}>
                    {{ button.icon ? icon(button.icon) }}
                    {{ trans(button.text) }}
                </button>
            {% endif %}

        {% endif %}

        {# Render dropdown type buttons. #}
        {% if button.dropdown %}
            <a class="btn btn-{{ button.type }} btn-{{ button.size }} dropdown-toggle" data-toggle="dropdown">
                {{ button.icon ? icon(button.icon) }}
                {{ trans(button.text) }}
            </a>
            {% for link in button.dropdown %}
                <ul class="dropdown-menu">
                    <li>
                        <a {{ html_attributes(link.attributes) }}>
                            {{ icon ? icon(link.icon) }}
                            {{ trans(link.text) }}
                        </a>
                    </li>
                </ul>
            {% endfor %}
        {% endif %}

    </div>
{% endfor %}
