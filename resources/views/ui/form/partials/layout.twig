{% if form.options.sections %}

    {% for section in form.options.sections %}
        {% if section.view %}
            {% include section.view %}
        {% elseif section.fields %}
            {% include "streams::ui/form/partials/default" %}
        {% elseif section.tabs %}
            {% include "streams::streams::ui/form/partials/tabbed" %}
        {% endif %}
    {% endfor %}

{% else %}
    {% include "streams::ui/form/partials/section" %}
{% endif %}
