<div class="field {{ field_type.hidden ? 'hidden' }}" {{ field_type.translatable ? 'data-locale=' ~ field_type.locale }}>

    <label class="{{ field_type.required ? 'required' }}">
        {{ trans(field_type.label)|raw }}
        {% if field_type.translatable %}
            <small>
                <i class="fa fa-language"></i> {{ config_get('streams.available_locales.' ~ field_type.locale) }}
            </small>
        {% endif %}

        {% if field_type.instructions %}
            <div class="instructions">{{ trans(field_type.instructions)|raw }}</div>
        {% endif %}
    </label>

    {{ field_type.renderInput()|raw }}

</div>
