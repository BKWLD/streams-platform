<div class="{{ field_type.hidden ? 'hidden' }}" data-locale="{{ field_type.locale }}">

    <label class="control-label {{ field_type.required ? 'required' }}">
        {{ trans(field_type.label) }}
        {% if field_type.translatable %}
            <small class="text-muted">
                <i class="fa fa-language"></i> {{ trans('streams::language.' ~ field_type.locale) }}
            </small>
        {% endif %}
    </label>

    {% if field_type.instructions %}
        <p class="help-block">{{ trans(field_type.instructions) }}</p>
    {% endif %}

    {{ field_type.renderInput()|raw }}

</div>
