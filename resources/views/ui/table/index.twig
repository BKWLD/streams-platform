{% if not actions.empty() %}
    {{ add_asset("streams.js", "streams::js/table/actions.js") }}
{% endif %}

{% if table.options.sortable %}
    {{ add_asset("streams.js", "streams::js/table/sortable.js") }}
{% endif %}

<section class="panel panel-default">

    {% include "streams::ui/table/partials/views" %}

    <div class="panel-body" style="padding: 0;">

        {% include "streams::ui/table/partials/filters" %}

        {% if not table.entries.empty() %}
            <form method="post">
                <table class="table table-hover {{ table.options.sortable ? 'sortable' }}">

                    {% include "streams::ui/table/partials/head" %}
                    {% include "streams::ui/table/partials/body" %}
                    {% include "streams::ui/table/partials/foot" %}

                </table>
            </form>
        {% else %}
            <div class="no-results">
                <h3>{{ trans(table.options.get('no_results_message', 'streams::message.error.no_results')) }}</h3>
            </div>
        {% endif %}

    </div>
</section>
