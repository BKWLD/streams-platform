<!-- Table Body -->
<tbody>
{% for row in rows %}
<tr class="{{ row.class }}">

    <td>
        <i class="fa fa-reorder" style="cursor: move;"></i>
    </td>

    <td>
        <input type="hidden" name="{{ options.prefix }}order[]" value="{{ entry.id }}"/>
        <input type="checkbox" name="{{ options.prefix }}id[]" value="{{ entry.id }}"/>
    </td>

    {% for column in row.columns %}
        <td class="{{ column.class }}" {{ column.attributes }}>
            {{ column.value }}
        </td>
    {% endfor %}

    <td class="text-right">
        {% for button in row.buttons %}
            <div class="btn-group">
                <a class="btn btn-{{ button.type }} btn-sm" {{ button.attributes }}>
                    {% if button.icon %}<i class="fa fa-{{ button.icon }}"></i>{% endif %}
                    {{ button.text }}
                </a>
                {% if button.dropdown %}
                    <a class="btn btn-{{ type }} btn-sm dropdown-toggle" data-toggle="dropdown">
                        <span class="caret"></span>
                    </a>
                    {% for link in button.dropdown %}
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li>
                                <a href="{{ link.url }}">
                                    {% if link.icon %}<i class="fa fa-{{ link.icon }}"></i>{% endif %}
                                    {{ link.text }}
                                </a>
                            </li>
                        </ul>
                    {% endfor %}
                {% endif %}
            </div>
        {% endfor %}
    </td>
</tr>
{% endfor %}
</tbody>
