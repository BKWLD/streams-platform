<!-- Table Head -->
<thead>
<tr>

    {% if sortable %}
        <th>
            <i class="fa fa-reorder" style="color: #dadada"></i>
        </th>
    {% endif %}

    {% if actions %}
        <th>
            <input type="checkbox" data-toggle="all"/>
        </th>
    {% endif %}

    {% for header in headers %}
        <th>
            <a href="#">
                {{ header.text }}
            </a>
        </th>
    {% endfor %}

    <th>&nbsp;</th>
</tr>
</thead>