<!-- Table Body -->
<tbody>
{% for entry in entries %}
    <tr class="{{ row.class }}">

        {% if options.sortable %}
            <td>
                <i class="fa fa-reorder handle" style="cursor: move;"></i>
                <input type="hidden" name="{{ options.prefix }}order[]" value="{{ entry.id }}"/>
            </td>
        {% endif %}

        {% if not actions.emtpy() %}
            <td>
                <input type="checkbox" name="{{ options.prefix }}id[]" value="{{ entry.id }}"/>
            </td>
        {% endif %}

        {% for column in columns %}
            <td class="{{ column.class }}" {{ column.attributes }}>
                {{ table_column_value(table, column, entry)|raw }}
            </td>
        {% endfor %}

        <td class="text-right buttons">
            {% for button in buttons %}
                <div class="btn-group">
                    <a class="btn btn-{{ button.type }} btn-sm" {{ html_attributes(button.getAttributes()) }}>
                        {{ icon ? icon(button.icon) }}
                        {{ trans(button.text) }}
                    </a>
                    {% if button.dropdown %}
                        <a class="btn btn-{{ button.type }} btn-sm dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                        </a>
                        {% for link in button.dropdown %}
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ link.url }}">
                                        {{ icon ? icon(link.icon) }}
                                        {{ trans(link.text) }}
                                    </a>
                                </li>
                            </ul>
                        {% endfor %}
                    {% endif %}
                </div>
            {% endfor %}
        </td>
    </tr>
{% endfor %}
</tbody>
