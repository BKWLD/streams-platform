<div class="table-filters {{ not filters.active().isEmpty() ? 'active' }}">
    <form class="form-inline" method="get">
        <input type="hidden" name="{{ options.prefix }}view" value="{{ views.active().getSlug() }}">

        {% for filter in filters %}
            <div class="form-group">
                {{ filter.input|raw }}
            </div>
        {% endfor %}

        <button type="submit" class="btn btn-success">{{ trans('streams::button.filter') }}</button>
        <a href="{{ url_current() }}" class="btn btn-link">{{ trans('streams::button.clear') }}</a>
    </form>
</div>
