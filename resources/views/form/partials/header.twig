{% if section.title %}
    <div class="card-header">
        <h4 class="card-title">

            {{ section.icon ? icon(section.icon) }}

            {{ trans(section.title)|raw }}

            {% if section.description %}

                <br>

                <small>
                    {{ trans(section.description)|raw }}
                </small>
            {% endif %}
        </h4>
    </div>
{% endif %}
