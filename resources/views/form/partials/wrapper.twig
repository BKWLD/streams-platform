<div
        class="field {{ field_type.required ? 'required' }} {{ field_type.hidden ? 'hidden' }}"
        {% if field_type.locale %}
            data-locale="{{ field_type.locale }}"
        {% endif %}
        >

    <label>
        {{ trans(field_type.label)|raw }}

        {% if field_type.locale %}
            <div class="ui pointing left mini label">
                {{ config_get('streams.enabled_locales.' ~ field_type.locale) }}
            </div>
        {% endif %}
    </label>

    {% if field_type.instructions %}
        <div class="instructions">{{ trans(field_type.instructions)|raw }}</div>
    {% endif %}

    {{ field_type.renderInput()|raw }}

</div>
