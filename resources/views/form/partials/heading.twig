{% if form.options.title %}
    <div class="panel">
        <div class="panel-heading">
            <h4 class="title">{{ trans(form.options.title) }}</h4>
        </div>

        <div class="panel-body">
            {% if form.options.description %}
                <p>{{ trans(form.options.description) }}</p>
            {% endif %}
        </div>
    </div>
{% endif %}
